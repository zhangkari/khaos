<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_meeting_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="input meeting No"
        android:inputType="number"
        android:minWidth="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_meeting_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="艺考第109场" />

        <CheckBox
            android:id="@+id/check_scheduled_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预定会议" />

        <Button
            android:id="@+id/btn_start_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start meeting"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_join_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Join meeting"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />

</LinearLayout>