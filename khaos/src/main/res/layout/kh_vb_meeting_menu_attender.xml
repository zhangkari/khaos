<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/kh_bg_meeting_attender_dialog_item"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingLeft="19dp"
    android:paddingTop="12dp"
    android:paddingRight="19dp"
    android:paddingBottom="12dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/kh_ic_meeting_avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f1f1f1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A0ADCE"
            android:textSize="12sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kh_bg_meeting_menu_item"
        android:button="@drawable/kh_attender_dialog_video" />

    <CheckBox
        android:id="@+id/cb_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/kh_bg_meeting_menu_item"
        android:button="@drawable/kh_attender_dialog_audio" />

</LinearLayout>